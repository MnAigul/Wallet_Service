<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.10.xsd">

    <changeSet  id="001-create-schema" author="aigul.mingazova">
        <sql dbms="postgresql" endDelimiter=";">
            CREATE SCHEMA my_schema
        </sql>
    </changeSet>

    <changeSet xsi:schemaLocation="" id="002-create-table" author="aigul.mingazova">
        <createTable tableName="players" schemaName="my_schema">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="name" type="VARCHAR(255)">
                    <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(25)" defaultValue="ROLE_USER">
                <constraints nullable="false"/>
            </column>
            <column name="money" type="NUMERIC" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="003-create-table" author="aigul.mingazova">
        <createTable tableName="transactions"  schemaName="my_schema">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="player_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="VARCHAR(25)">
                <constraints nullable="false"/>
            </column>
            <column name="sum" type="NUMERIC">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="004-add-constraints" author="aigul.mingazova">
        <addForeignKeyConstraint baseColumnNames="player_id"
                                 baseTableName="transactions"
                                 baseTableSchemaName="my_schema"
                                 constraintName="fk_player_transactions"
                                 deferrable="false"
                                 initiallyDeferred="false"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedTableSchemaName="my_schema"
                                 referencedColumnNames="id"
                                 referencedTableName="players"/>
    </changeSet>

    <changeSet id="005-create-table" author="aigul.mingazova">
        <createTable tableName="audit" schemaName="my_schema">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="player_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="audit_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="event_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="time" type="TIMESTAMP" defaultValue="now()">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="006-add-constraints" author="aigul.mingazova">
        <addForeignKeyConstraint baseColumnNames="player_id"
                                 baseTableName="audit"
                                 baseTableSchemaName="my_schema"
                                 constraintName="fk_player_audit"
                                 deferrable="false"
                                 initiallyDeferred="false"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedTableSchemaName="my_schema"
                                 referencedColumnNames="id"
                                 referencedTableName="players"/>
    </changeSet>

    <changeSet id="007-create-sequence-players_id" author="aigul.mingazova">
        <createSequence sequenceName="players_id_seq"
                        incrementBy="1"
                        schemaName="my_schema"
                        dataType="BIGINT"
                        minValue="1"
                        startValue="1"
                        cycle="false"/>
    </changeSet>

    <changeSet id="008-attach-sequence-players_id" author="aigul.mingazova">
        <addDefaultValue tableName="players"
                         columnName="id"
                         schemaName="my_schema"
                         columnDataType="BIGINT"
                         defaultValueComputed="nextval('my_schema.players_id_seq')"/>
    </changeSet>

    <changeSet id="009-create-sequence-audit_id" author="aigul.mingazova">
        <createSequence sequenceName="audit_id_seq"
                        incrementBy="1"
                        dataType="BIGINT"
                        schemaName="my_schema"
                        minValue="1"
                        startValue="1"
                        cycle="false"/>
    </changeSet>

    <changeSet id="010-attach-sequence-audit_id" author="aigul.mingazova">
        <addDefaultValue tableName="audit"
                         columnName="id"
                         schemaName="my_schema"
                         columnDataType="BIGINT"
                         defaultValueComputed="nextval('my_schema.audit_id_seq')"/>
    </changeSet>

</databaseChangeLog>